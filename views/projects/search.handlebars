<div class="row">
    <div class="col-sm-12 div-box3">
        <div class="head-div">
            <h2>Search</h2>
        </div>
        <form action="/projects/searchResult" method="POST" class="search-form" id="search-project-form">
            <div class="form-group">
                <label for="category">By category:</label>
                <select id="category" name="category">
                    <option value="none" selected>Select a category</option>
                    <option value="medical">Medical</option>
                    <option value="education">Education</option>
                    <option value="animals">Animals</option>
                    <option value="business">Business</option>
                    <option value="community">Community</option>
                    <option value="sports">Sports</option>
                    <option value="travel">Travel</option>
                    <option value="volunteer">Volunteer</option>
                </select>
            </div>
            <div class="form-group">
                <label for="from-pledged">By pledge goal<br>From:</label>
                <input type="number" name="from_pledged" id="from-pledged" value="{{searchProjectData.from_pledged}}"
                    class="full-width-input form-control" />
                <div id="from-pledged-nan" hidden>Pledge goal lower bound needs to be a number</div>
                <div id="invalid-from-pledged" hidden>Pledge goal lower bound needs to be positive</div>
            </div>
            <div class="form-group">
                <label for="to-pledged">To:</label>
                <input type="number" name="to_pledged" id="to-pledged" value="{{searchProjectData.to_pledged}}"
                    class="full-width-input form-control" />
                <div id="to-pledged-nan" hidden>Pledge goal upper bound needs to be a number</div>
                <div id="invalid-to-pledged" hidden>Pledge goal upper bound needs to be positive</div>
            </div>
            <div class="form-group">
                <label for="from-collected">By collected amount<br>From:</label>
                <input type="number" name="from_collected" id="from-collected"
                    value="{{searchProjectData.from_collected}}" class="full-width-input form-control" />
                <div id="from-collected-nan" hidden>Collected amount lower bound needs to be a number</div>
                <div id="invalid-from-collected" hidden>Collected amount lower bound needs to be positive</div>
            </div>
            <div class="form-group">
                <label for="to-collected">To:</label>
                <input type="number" name="to_collected" id="to-collected" value="{{searchProjectData.to_collected}}"
                    class="full-width-input form-control" />
                <div id="to-collected-nan" hidden>Collected amount upper bound needs to be a number</div>
                <div id="invalid-to-collected" hidden>Collected amount upper bound needs to be positive</div>
            </div>
            <button type="submit">Search</button><br>
        </form>
        <br><a class="back-button" href="/projects">Back to All Projects</a>
        <br>
        <ul class="error-list">
           <li id="from-pledged>to-pledged" class="link-style" hidden>Pledge goal lower bound can't be greater than its upper bound</li> 
           <li id="from-collected>to-collected" class="link-style" hidden>Collected amount lower bound can't be greater than its upper bound</li>
        </ul>
    </div>
</div>

{{#if hasErrors}}
<ul class="error-list">
    {{#each errors}}
    <li>
        {{this}}
    </li>
    {{/each}}
</ul>
{{/if}}
