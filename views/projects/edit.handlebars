<article class="new-project">
    <div class="row">
        <div class="col-sm-12 div-box3">
            <div class="head-div">
                <h2>Edit Project</h2>
            </div>
            <form action="/projects/edit" method="POST" class="new-project-form" id="edit-project-form">
                <div class="form-group">
                    <label for="title">Project Title:</label>
                    <input type="text" name="title" id="title" value="{{project.title}}" class="full-width-input form-control" />
                    <div id="no-title"  hidden>Please enter the project title</div>
                </div>
                <div class="form-group">
                    <label for="category">Category:</label>
                    <select id="category" name="category">
                        <option value="medical">Medical</option>
                        <option value="education">Education</option>
                        <option value="animals">Animals</option>
                        <option value="business">Business</option>
                        <option value="community">Community</option>
                        <option value="sports">Sports</option>
                        <option value="travel">Travel</option>
                        <option value="volunteer">Volunteer</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="goal">Pledge Goal:</label>
                    <input type="number" name="goal" id="goal" value="{{project.pledgeGoal}}"
                        class="full-width-input form-control" />
                    <div id="no-goal"  hidden>Please enter the project pledge goal</div>
                    <div id="invalid-amount"  hidden>Pledge goal should be greater than zero</div>
                    <div id="invalidtype-edit" hidden>Pledge goal needs to be a number</div>
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea name="description" id="description" rows="4"
                        class="full-width-input form-control">{{project.description}}</textarea>
                    <div id="no-description"  hidden>Please enter the project description</div>
                <div>
                    <input type="hidden" name="id" value="{{project._id}}" />
                    <input type="hidden" name="date" value="{{project.date}}" />
                </div>
                </div>
                <br>
                <button type="submit" class="btn btn-success" >Save</button><br>
            </form>
        </div>
    </div>
    {{#if hasErrors}}
    <ul class="error-list">
        {{#each errors}}
        <li>
            {{this}}
        </li>
        {{/each}}
    </ul>
    {{/if}}
</article>