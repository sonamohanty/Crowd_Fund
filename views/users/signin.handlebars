<div class="row">
    <div class="col-sm-12 div-box1">
        <div class="head-div">
            <h2>Sign In page</h2>
        </div>
        <form action="/users/signin" method="POST" id="signin-form">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="text" name="email" id="email" class="full-width-input form-control"
                    placeholder="Enter email" />
                <div id="no-email" hidden>Please enter your email</div>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" name="password" id="password" class="full-width-input form-control"
                    placeholder="Password" />
                <div id="no-password" hidden>Please enter your password</div>
            </div>
            <button type="submit" class="btn btn-success">Sign In</button>
            <a id="register-button" href="/users/register">Register</a>
        </form>
    </div>
</div>
<br>

{{#if hasErrors}}
<ul id="error-list" class="error-list">
    {{#each errors}}
    <li>
        {{this}}
    </li>
    {{/each}}
</ul>
{{/if}}